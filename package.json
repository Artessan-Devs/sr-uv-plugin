{
  "name": "@artessan-devs/sr-uv-plugin",
  "version": "1.0.0",
  "description": "semantic release plugin for uv",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "clean": "node -e \"import('fs/promises').then(fs => fs.rm('dist', { recursive: true, force: true }))\"",
    "prepare": "npm run clean && npm run build",
    "release": "semantic-release"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Artessan-Devs/sr-uv-plugin.git"
  },
  "keywords": [
    "semantic-release",
    "plugin",
    "uv",
    "pyproject",
    "python"
  ],
  "author": {
    "name": "Casanova J.",
    "email": "johann@artesssandevs.co"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.3",
    "semantic-release": "^23.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
